{% load static %}
{% load i18n %}

<div class="Section-column">

    <div class="Section-columnSection Section-columnSection_mark">
      <header class="Section-columnHeader">
        <strong class="Section-columnTitle">{% translate "ОГРАНИЧЕННЫЕ ПРЕДЛОЖЕНИЯ" %}
        </strong>
      </header>

      <div class="Card">
        <a class="Card-picture" href="{{ limited_offer.product.get_absolute_url }}">
            <img src="{{ limited_offer.product.preview.url }}" alt="card.jpg"/>
        </a>
        <div class="Card-content">
          <strong class="Card-title">
            <a href="{{ limited_offer.product.get_absolute_url }}">{{ limited_offer.product.name }}</a>
          </strong>
          <div class="Card-description">
            <div class="Card-cost">
                <span class="Card-priceOld">${{ limited_offer.old_price }}</span>
                <span class="Card-price">${{ limited_offer.new_price }}</span>
            </div>
            <div class="Card-category">{{ limited_offer.product.category.name }}
            </div>
          </div>
          <div class="CountDown" data-date="{{ offers_time }}">
            <div class="CountDown-block">
              <div class="CountDown-wrap">
                <div class="CountDown-days">
                </div><span class="CountDown-label">{% translate "дни" %}</span>
              </div>
            </div>
            <div class="CountDown-block">
              <div class="CountDown-wrap">
                <div class="CountDown-hours">
                </div><span class="CountDown-label">{% translate "часы" %}</span>
              </div>
            </div>
            <div class="CountDown-block">
              <div class="CountDown-wrap">
                <div class="CountDown-minutes">
                </div><span class="CountDown-label">{% translate "мин." %}</span>
              </div>
            </div>
            <div class="CountDown-block">
              <div class="CountDown-wrap">
                <div class="CountDown-secs">
                </div><span class="CountDown-label">{% translate "сек." %}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
