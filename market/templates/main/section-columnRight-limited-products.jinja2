{% load static %}
{% load i18n %}

<div class="wrap">

    <div class="Section-content">
        <div class="Slider Slider_carousel">

            <header class="Section-header Section-header_close">
                <h2 class="Section-title">{% translate "Ограниченный тираж" %}
                </h2>
                <div class="Section-control">
                    <div class="Slider-navigate">
                    </div>
                </div>
            </header>

            <div class="Slider-box Cards">
                {% for product in limited_offers %}
                    {% for offer in product.offers.all %}
                        <div class="Slider-item">
                            <div class="Slider-content">
                                <div class="Card">
                                    <a class="Card-picture" href="{{ product.get_absolute_url }}">
                                        <img src="{{ product.preview.url }}" alt="card.jpg" />
                                    </a>
                                    <div class="Card-content">
                                        <strong class="Card-title"><a href="{{ product.preview.url }}">{{ product.name }}</a>
                                        </strong>
                                        <div class="Card-description">
                                            <div class="Card-cost"><span class="Card-price">${{ offer.price }}</span>
                                            </div>
                                            <div class="Card-category">{{ product.category.name }}
                                            </div>
                                            <div class="Card-hover">
                                                <a class="Card-btn" href="{% url 'basket:add_product' product_pk=product.pk offer_pk=offer.pk %}">
                                                    <img src="{% static 'assets/img/icons/card/cart.svg' %}" alt="cart.svg" />
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

            </div>
        </div>
    </div>
</div>
