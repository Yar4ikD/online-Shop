{% extends "general/base.jinja2" %}
{% load static i18n %}
{% block title %}
    {% translate 'История заказов' %}
{% endblock %}
{% block content %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{% translate 'Навигация' %}
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                               <ul class="menu menu_vt">
                                    <li class="menu-item"><a class="menu-link" href="{% url "profiles:account" %}">{% translate "Личный кабинет" %}</a>
                                    </li>
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{% url 'profiles:profile' %}">{% translate "Профиль" %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url 'order:history' %}">{% translate "История заказов" %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url 'history:view_history' %}">{% translate "История просмотров" %}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Orders">
                        {% for product in products %}
                            {% with order=product.order delivery=product.order.delivery status=product.order.order_status %}
                                <div class="Order Order_anons">
                                    <div class="Order-personal">
                                        <div class="row">
                                            <div class="row-block"><a class="Order-title" href="{% url "order:one_order" order.pk %}"><span class="Order-numberOrder">№{{order.pk}}</span><span class="Order-dateOrder"> {% translate 'от' %} {{order.date_added}}</span></a>
                                            </div>
                                            <div class="row-block">
                                                <div class="Order-info Order-info_delivery">
                                                    <div class="Order-infoType">{% translate "Тип доставки:" %}
                                                    </div>
                                                    <div class="Order-infoContent">{{delivery.delivery_type}}
                                                    </div>
                                                </div>
                                                <div class="Order-info Order-info_pay">
                                                    <div class="Order-infoType">{% translate "Оплата:" %}
                                                    </div>
                                                    <div class="Order-infoContent">{{delivery.pay}}
                                                    </div>
                                                </div>
                                                <div class="Order-info">
                                                    <div class="Order-infoType">{% translate "Общая стоимость:" %}
                                                    </div>
                                                    <div class="Order-infoContent"><span class="Order-price">{{product.price}}$</span>
                                                    </div>
                                                </div>
                                                <div class="Order-info Order-info_status">
                                                    <div class="Order-infoType">{% translate "Статус" %}:
                                                    </div>
                                                    <div class="Order-infoContent">{{status.name}}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endwith %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
