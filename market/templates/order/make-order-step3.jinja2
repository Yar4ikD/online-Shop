{% extends "general/base.jinja2" %}
{% load static i18n %}
{% block title %}
    {% translate 'Создание заказа' %}
{% endblock %}

{% block content %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnRight Section_columnWide Order">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{% translate 'Прогресс заполнения' %}
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{% url "order:make_order_step_1" %}">{% translate 'Шаг 1. Параметры пользователя' %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url "order:make_order_step_2" %}">{% translate 'Шаг 2. Способ доставки' %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url "order:make_order_step_3" %}">{% translate 'Шаг 3. Способ оплаты' %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url "order:make_order_step_4" %}">{% translate 'Шаг 4. Подтверждение заказа' %}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <form class="form" method="post" enctype="multipart/form-data">
                        {% csrf_token %}
                            <h2 class="Section-title">{% translate 'Шаг 3. Способ оплаты' %}</h2>
                                </header>
                                <div class="form-group">
                                    <div>
                                        {{form_delivery.pay}}
                                    </div>
                                <div class="Order-footer">
                                    <button class="btn btn_primary btn_lg"><input type="submit" value="{% translate 'Дальше' %}"></button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
