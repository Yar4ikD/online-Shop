{% extends "general/base.jinja2" %}
{% load static i18n %}
{% block title %}
    {% translate 'Создание заказа' %}
{% endblock %}

{% block content %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnRight Section_columnWide Order">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{% translate 'Прогресс заполнения' %}
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{% url "order:make_order_step_1" %}">{% translate 'Шаг 1. Параметры пользователя' %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url "order:make_order_step_2" %}">{% translate 'Шаг 2. Способ доставки' %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url "order:make_order_step_3" %}">{% translate 'Шаг 3. Способ оплаты' %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{% url "order:make_order_step_4" %}">{% translate 'Шаг 4. Подтверждение заказа' %}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <header class="Section-header Section-header_sm">
                        <h2 class="Section-title">{% translate 'Шаг 4. Подтверждение заказа' %}
                        </h2>
                    </header>
                    <!--+div.Order.-confirmation-->
                    <div class="Order-infoBlock">
                        <div class="Order-personal">
                            <div class="row">
                                <div class="row-block">
                                    <div class="Order-info">
                                        <div class="Order-infoType">{% translate 'ФИО:' %}
                                        </div>
                                        <div class="Order-infoContent">{{order.customer}}
                                        </div>
                                    </div>
                                    <div class="Order-info">
                                        <div class="Order-infoType">{% translate 'Телефон:' %}
                                        </div>
                                        <div class="Order-infoContent">{{order.phone}}
                                        </div>
                                    </div>
                                    <div class="Order-info">
                                        <div class="Order-infoType">E-mail:
                                        </div>
                                        <div class="Order-infoContent">{{order.email}}
                                        </div>
                                    </div>
                                </div>
                                <div class="row-block">
                                    <div class="Order-info Order-info_delivery">
                                        <div class="Order-infoType">{% translate 'Тип доставки:' %}
                                        </div>
                                        <div class="Order-infoContent">{{order.delivery.delivery_type}}
                                        </div>
                                    </div>
                                    <div class="Order-info">
                                        <div class="Order-infoType">{% translate 'Город:' %}
                                        </div>
                                        <div class="Order-infoContent">{{order.delivery.city}}
                                        </div>
                                    </div>
                                    <div class="Order-info">
                                        <div class="Order-infoType">{% translate 'Адрес:' %}
                                        </div>
                                        <div class="Order-infoContent">{{order.delivery.address}}
                                        </div>
                                    </div>
                                    <div class="Order-info Order-info_pay">
                                        <div class="Order-infoType">{% translate 'Оплата:' %}
                                        </div>
                                        <div class="Order-infoContent">{{order.delivery.pay}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="Cart Cart_order">
                            {% for product in products %}
                                <div class="Cart-product">
                                    <div class="Cart-block Cart-block_row">
                                        <div class="Cart-block Cart-block_pict"><a class="Cart-pict" href="{% url "products:product_detail" product.product.pk %}"><img class="Cart-img" src="{{product.product.preview.url}}" alt="{{product.product.name}}" /></a>
                                        </div>
                                        <div class="Cart-block Cart-block_info"><a class="Cart-title" href="{% url "products:product_detail" product.product.pk %}">{{product.product.name}}</a>
                                            <div class="Cart-desc">{{product.product.description}}
                                            </div>
                                        </div>
                                        <div class="Cart-block Cart-block_price">
                                            <div class="Cart-price">{{product.price}}&nbsp;$
                                            </div>
                                        </div>
                                    </div>
                                    <div class="Cart-block Cart-block_row">
                                        <div class="Cart-block Cart-block_amount">{{product.amount}} {% translate 'шт.' %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="Cart-total">
                                <div class="Cart-block Cart-block_total">
                                    <strong class="Cart-title">{% translate 'Итого:' %}
                                    </strong><span class="Cart-price">{{sum}}&nbsp;$</span>
                                </div>
                                <div class="Cart-block">
                                    <a href="{% url "order:payment" order.pk %}" class="btn btn_primary btn_lg" >{% translate 'Оплатить' %}
                                    </a>
                                </div>
                            </div>
                            {% if delivery_sum %}
                                <div class="Cart-total">
                                    <div class="Cart-block Cart-block_total">
                                        <strong class="Cart-title">{% translate 'Доставка (включена в итого):' %}
                                        </strong><span class="Cart-price">{{delivery_sum}}&nbsp;$</span>
                                    </div>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
