{% extends "general/base.jinja2" %}
{% load static i18n %}
{% block title %}
    {{product.name}}
{% endblock %}
{% block content %}
    <div class="Middle Middle_top">
        <div class="Section">
            <div class="wrap">
                <div class="Product">
                    <div class="ProductCard">
                        <div class="ProductCard-look ProductCard-width">
                            <div class="ProductCard-photo">
                                <img src="{{product.preview.url}}" alt="{{product.name}}" />
                            </div>

                            <div class="ProductCard-picts">
                                <a class="ProductCard-pict ProductCard-pict_ACTIVE" href="{{ product.image.url }}">
                                    <img src="{{ product.image.url }}" alt="{{ product.name }}" />
                                </a>
                                {% for img in product.productimage_set.all %}
                                    <a class="ProductCard-pict" href="{{ img.image.url }}">
                                        <img src="{{ img.image.url }}" alt="{{ img.image.name }}" />
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="ProductCard-desc">
                            <div class="ProductCard-header">
                                <h2 class="ProductCard-title">
                                    {{product.name}}
                                </h2>
                                <div class="ProductCard-info">
                                    <div class="ProductCard-cost">
                                        <div class="ProductCard-price">
                                            {% translate "Цена от" %} {{min_price}}$
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ProductCard-text">
                                <ul>
                                    <li>
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, eiusmod
                                    </li>
                                    <li>
                                        tempor incididunt ut labore et dolore magna aliqua. Lorem
                                    </li>
                                    <li>
                                        ipsum dolor sit ameabore et dolore magna aliqua. Lorem ipsum
                                    </li>
                                </ul>
                            </div>
                            <form method="post" enctype="multipart/form-data" action="{% url "basket:add_random_product" product.pk %}">
                                {% csrf_token %}
                                <div class="ProductCard-cart">
                                    <div class="ProductCard-cartElement ProductCard-cartElement_amount">
                                        <div class="Amount Amount_product">
                                            <button class="Amount-remove" type="button">
                                            </button>
                                                {{ form_basket.amount }}
                                            <button class="Amount-add" type="button">
                                            </button>
                                        </div>
                                    </div>
                                    <div class="ProductCard-cartElement">
                                        <a href="#modal_open">
                                            <button class="btn btn_primary"  type="submit" value="add">
                                                <img class="btn-icon" src="{% static "assets/img/icons/card/cart_white.svg" %}" alt="cart_white.svg" />
                                                <span class="btn-content">{% translate "Купить" %}</span>
                                            </button>
                                        </a>
                                    </div>
                                    <div id="modal_open" class="my_modal">
                                        <div class="my_modal-dialog">
                                            <div class="my_modal-content">
                                                <div class="my_modal-header">
                                                    <p class="my_modal-title">{% translate "Поздравляем!" %}</p>
                                                    <a href="#" title="{% translate "Закрыть модальное окно" %}" class="close">×</a>
                                                </div>
                                                <div class="my_modal-body">
                                                    <p>{% translate "Товар успешно добавлен в корзину!" %}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="ProductCard-footer">
                                <div class="ProductCard-tags">
                                    <strong class="ProductCard-tagsTitle">Тэги:
                                    </strong><a href="#">{% translate "Аксессуары" %}</a>,<a href="#">{% translate "Дизайн" %}</a>,<a href="#">{% translate "Игры" %}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Tabs Tabs_default">
                        <div class="Tabs-links">
                            <a class="Tabs-link_ACTIVE Tabs-link" href="#description">
                                <span>{% translate "Описание" %}</span>
                            </a>
                            <a class="Tabs-link" href="#sellers">
                                <span>{% translate "Продавцы" %}</span>
                            </a>
                            <a class="Tabs-link" href="#addit">
                                <span>{% translate "Характеристика" %}</span>
                            </a>
                            <a class="Tabs-link" href="#reviews">
                                <span>{% translate "Отзывы " %}({{ comment_count }})</span>
                            </a>
                        </div>
                        <div class="Tabs-wrap">
                            <div class="Tabs-block" id="description">
                                <h2>Megano Store Hystory
                                </h2>
                                <p>Lorem ipsum dolor sit amet, consectetuer&#32;
                                    <strong>adipiscing
                                    </strong>&#32;elit doli. Aenean commodo ligula eget dolor. Aenean massa.&#32;<a href="#">Cumtipsu</a>&#32;sociis natoque penatibus et magnis dis parturient montesti, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eutu, pretiumem.
                                </p><img class="pict pict_right preview" src="{{ product.image.url }}" alt="{{ product.name }}" />
                                <ul>
                                    <li>
                                        Lorem ipsum dolor sit amet, consectetuer
                                    </li>
                                    <li>
                                        adipiscing elit doli.&#32;<em>Aenean</em>&#32;commodo ligula
                                    </li>
                                    <li>
                                        eget dolor. Aenean massa. Cumtipsu sociis
                                    </li>
                                    <li>
                                        natoque penatibus et magnis dis parturient
                                    </li>
                                    <li>
                                        montesti, nascetur ridiculus mus. Donec
                                    </li>
                                    <li>
                                        quam felis, ultricies nec, pellentesque eutu
                                    </li>
                                </ul>
                                <div class="clearfix">
                                </div>
                                <div class="table">
                                    <table>
                                        <tr>
                                            <th>
                                                {% translate "Характеристика" %}
                                            </th>
                                            <th>
                                                {{product.description}}
                                            </th>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="Tabs-block" id="sellers">
                                <div class="Section-content">
                                    <div class="Orders">
                                        {% for offer in offers %}
                                            <div class="Order Order_anons">
                                                <div class="Order-personal">
                                                    <div class="row">
                                                        <div class="row-block">
                                                            <a class="Order-title" href="#">
                                                                {{offer.shop.name}}
                                                            </a>
                                                                <div class="ProductCard-cartElement" style="margin-top: 10px;">
                                                                    <a class="btn btn_primary" href="{% url "basket:add_product" offer.product.pk offer.pk %}">
                                                                        <img class="btn-icon" src="{% static "assets/img/icons/card/cart_white.svg" %}" alt="cart_white.svg" />
                                                                        <span class="btn-content">{% translate "Купить" %}</span>
                                                                    </a>
                                                                </div>
                                                        </div>
                                                        <div class="row-block">
                                                            <div class="Order-info Order-info_delivery">
                                                                <div class="Order-infoType">{% translate "Тип доставки:" %}
                                                                </div>
                                                                <div class="Order-infoContent">{% translate "Обычная доставка" %}
                                                                </div>
                                                            </div>
                                                            <div class="Order-info Order-info_pay">
                                                                <div class="Order-infoType">{% translate "Оплата:" %}
                                                                </div>
                                                                <div class="Order-infoContent">{% translate "Онлайн картой" %}
                                                                </div>
                                                            </div>
                                                            <div class="Order-info">
                                                                <div class="Order-infoType">{% translate "Стоимость:" %}
                                                                </div>
                                                                <div class="Order-infoContent">
                                                                    <span class="Order-price">
                                                                        {{offer.price}}$
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="Order-info">
                                                                <div class="Order-infoType">{% translate "Остаток в магазине:" %}
                                                                </div>
                                                                <div class="Order-infoContent">
                                                                    <span class="Order-price">
                                                                         {{offer.remainder}}{% translate " шт." %}
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="Tabs-block" id="addit">
                                <div class="Product-props">
                                    {% for addit in product_detail %}
                                        <div class="Product-prop">
                                            <strong>
                                                {{addit.detail.name}}
                                            </strong>
                                            <span>
                                                {{addit.value}}
                                            </span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="Tabs-block" id="reviews">
                                <header class="Section-header">
                                    <h3 class="Section-title">
                                        {{ comment_count }} {% translate "отзывов" %}
                                </header>
                                <div class="Comments">
                                    {% for comment in comments_list %}
                                        <div class="Comment">
                                            <div class="Comment-column Comment-column_pict">
                                                <div class="Comment-avatar">
                                                </div>
                                            </div>
                                            <div class="Comment-column">
                                                <header class="Comment-header">
                                                    <div>
                                                        <strong class="Comment-title">{{ comment.author.username }}
                                                        </strong><span class="Comment-date">{{ comment.date_publish }}</div>
                                                </header>
                                                <div class="Comment-content">{{ comment.text }}</div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <header class="Section-header Section-header_product">
                                    <h3 class="Section-title">{% translate "Добавить отзыв" %}
                                    </h3>
                                </header>
                                <div class="Tabs-addComment">
                                    {% if user.is_authenticated %}
                                        <form class="form" action="#" method="post">
                                            {% csrf_token %}

                                            <div class="form-group">
                                                {{ form.text.errors }}
                                                <textarea class="form-textarea" name="text" id="review" placeholder="{% translate "Отзыв" %}"></textarea>
                                            </div>

                                            <div class="form-group">
                                                <button class="btn btn_muted" type="submit">{% translate "Отправить отзыв" %}
                                                </button>
                                            </div>
                                        </form>
                                    {% else %}
                                        <p>{% translate "Для добавления отзывов, пользователь должен авторизоваться на сайте." %}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
