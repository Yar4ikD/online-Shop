                {% block content %}
                    <div class="wrapper">
                        <div class="header">
                            <h3 class="sign-in">Вход</h3>
                        </div>
                        <div class="clear"></div>
                        <form action="#" method="post">
                            {% csrf_token %}
                            <div>
