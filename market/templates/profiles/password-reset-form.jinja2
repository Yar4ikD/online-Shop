{% extends "profiles/base.jinja2" %}

{% load i18n %}

{% block title %}
    {% translate 'Запрос на восстановление пароля' %}
{% endblock %}

{% block content %}
    <div class="wrapper">
        <div class="header">
            <h3 class="sign-in">{% translate 'Восстановление пароля (1/2)' %}</h3>
            <h5>{% translate 'Для восстановления пароля введите адрес электронной почты, на которую зарегистрирована учетная запись' %}</h5>
        </div>

        <form action="#" method="POST">
            {% csrf_token %}
            <div>
                {{ form.email.errors }}
                <input class="user-input" type="email" name="email" id="name" placeholder="E-mail" />
            </div>
            <div>
                <input type="submit" value="{% translate 'Получить ссылку' %}" />
            </div>
            <a class="registr" href="{% url 'profiles:login' %}">
                Вход
            </a>
        </form>
    </div>
{% endblock %}
