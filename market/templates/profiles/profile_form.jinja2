{% extends "profiles/base.jinja2" %}

{% load static i18n %}

{% block title %}
    {% translate 'Страница профиля' %}
{% endblock %}

{% block content %}
{% if request.user.is_authenticated %}

    <div class="Middle Middle_top">
            <div class="Section Section_column Section_columnLeft">
                <div class="wrap">
                    <div class="Section-column">
                        <div class="Section-columnSection">
                            <header class="Section-header">
                                <strong class="Section-title">{% translate 'Навигация' %}
                                </strong>
                            </header>
                            <div class="Section-columnContent">
                                <div class="NavigateProfile">
                                    <ul class="menu menu_vt">
                                        <li class="menu-item"><a class="menu-link" href="{% url "profiles:account" %}">{% translate "Личный кабинет" %}</a>
                                        </li>
                                        <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{% url 'profiles:profile' %}">{% translate "Профиль" %}</a>
                                        </li>
                                        <li class="menu-item"><a class="menu-link" href="{% url 'order:history' %}">{% translate "История заказов" %}</a>
                                        </li>
                                        <li class="menu-item"><a class="menu-link" href="{% url 'history:view_history' %}">{% translate "История просмотров" %}</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Section-content">
                        <div class="Account">
                            <div class="Account-group">
                                <div class="Account-column">
                                    <div class="Account-avatar"><img src="{{ user.profile.avatar.url }}" alt="{{ user.profile.avatar.name }}">
                                    </div>
                                </div>
                                <div class="Account-column">
                                    <div class="Account-name">{{ user.get_full_name }}
                                    </div><a class="Account-editLink" href="{% url 'profiles:profile' %}">{% translate "Редактировать профиль" %}</a>
                                </div>
                            </div>
                            <div class="Account-group">
                                <div class="Account-column Account-column_full" action="{% url 'profiles:account' %}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <h2>{% translate "Пользователь не авторизован" %}</h2>
        <div class="Account-group">
            <div class="Account-login" action="{% url 'profiles:login' %}">
            </div>
        </div>
    {% endif %}
{% endblock %}
