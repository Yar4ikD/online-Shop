{% extends "profiles/login.jinja2" %}
{% load static i18n %}

{% block title %}
    {% translate 'Страница регистрации пользователя' %}
{% endblock %}

{% block content %}
        <div class="wrapper">
            <div class="header">
                <h3 class="sign-in">{% translate 'Регистрация' %}</h3>

            </div>
            <div class="clear"></div>

            <form action="#" method="post">
                {% csrf_token %}

                <div>
                    <input class="user-input" type="text" name="username" id="name" placeholder="{% translate 'Имя' %}" />
                    {{ form.username.errors }}
                </div>
                <div>
                    <input class="user-input" type="email" name="email" id="name" placeholder="E-mail" />
                    {{ form.email.errors }}
                </div>
                <div>

                    <input type="password" name="password1" id="name" placeholder="{% translate 'Пароль' %}" />
                    {{ form.password1.errors }}
                </div>
                <div>

                    <input type="password" name="password2" id="name" placeholder="{% translate 'Повторите пароль' %}" />
                    {{ form.password1.errors }}
                </div>
                <div class="user-input">
                    {{ form.group }}
                    {{ form.group.errors }}
                </div>

                <input type="submit" value="{% translate 'Зарегистрироваться' %}" />
                <a class="registr" href="{% url 'profiles:login' %}">
                    Вход
                </a>
                <div class="clear"></div>
            </form>

        </div>
{% endblock %}
