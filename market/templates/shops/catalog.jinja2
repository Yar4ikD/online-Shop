{% extends "general/base.jinja2" %}

{% load static %}
{% load i18n %}

{% block title %}
    {% translate 'Страница каталога товаров.' %}
{% endblock %}

{% block content %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{% translate 'Фильтр' %}
                            </strong>
                        </header>
                        <div class="Section-columnContent">

                            <form class="form" action="#" method="post">
                                {% csrf_token %}
                                <div class="form-group">
                                    <div>{{ form.price.errors }}</div>
                                    <div class="range Section-columnRange">
                                        <input class="range-line" id="price" name="price" type="text" data-type="double" data-min="5" data-max="50000" data-from="500" data-to="3000" />
                                        <div class="range-price">{% translate 'Цена:' %}&#32;
                                            <div class="rangePrice">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input class="form-input form-input_full" id="title" name="title" type="text" placeholder="{% translate 'Название' %}" />
                                </div>
                                <div class="form-group">
                                    <!-- - var options = setOptions(items, ['value', 'selected', 'disabled']);-->
                                </div>
                                <div class="form-group">
                                    <label class="toggle">
                                        <input type="checkbox" name="available" /><span class="toggle-box"></span>
                                        <span class="toggle-text">{% translate 'Только товары в наличии' %}</span>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label class="toggle">
                                        <input type="checkbox" name="delivery" /><span class="toggle-box"></span>
                                        <span class="toggle-text">{% translate 'С бесплатной доставкой' %}</span>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <div class="buttons"><input type="submit" class="btn btn_square btn_dark btn_narrow" value="{% translate 'Фильтр' %}" />
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{% translate 'Популярные тэги' %}
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="buttons">
                                <a class="btn btn_default btn_sm" href="#">{% translate 'Видео' %}</a>
                                <a class="btn btn_default btn_sm" href="#">{% translate 'Разработка' %}</a>
                                <a class="btn btn_default btn_sm" href="#">{% translate 'Игры' %}</a>
                                <a class="btn btn_default btn_sm" href="#">{% translate 'Asus' %}</a>
                                <a class="btn btn_default btn_sm" href="#">{% translate 'Разработка' %}</a>
                                <a class="btn btn_default btn_sm" href="#">{% translate 'Видео' %}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Sort">
                        <div class="Sort-title">{% translate 'Сортировать по:' %}</div>

                        <div class="Sort-variants">
                            {% if not cat %}
                                <a class="Sort-sortBy Sort-sortBy_dec" href="{% url 'shops:shops-catalog' sort='popular' %}">{% translate 'Популярности' %}</a>
                                <a class="Sort-sortBy" href="{% url 'shops:shops-catalog' sort='price' %}">{% translate 'Цене' %}</a>
                                <a class="Sort-sortBy" href="{% url 'shops:shops-catalog' sort='comments' %}">{% translate 'Отзывам' %}</a>
                                <a class="Sort-sortBy Sort-sortBy_inc" href="{% url 'shops:shops-catalog' sort='date' %}">{% translate 'Новизне' %}</a>
                            {% else %}
                                <a class="Sort-sortBy Sort-sortBy_dec" href="{% url 'shops:shops-catalog' cat=cat sort='popular' %}">{% translate 'Популярности' %}</a>
                                <a class="Sort-sortBy" href="{% url 'shops:shops-catalog' cat=cat sort='price' %}">{% translate 'Цене' %}</a>
                                <a class="Sort-sortBy" href="{% url 'shops:shops-catalog' cat=cat sort='comments' %}">{% translate 'Отзывам' %}</a>
                                <a class="Sort-sortBy Sort-sortBy_inc" href="{% url 'shops:shops-catalog' cat=cat sort='date' %}">{% translate 'Новизне' %}</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="Cards">
                        {%for product in products %}
                            {% for offer in product.offers.all %}

                                <div class="Card"><a class="Card-picture" href="{{ product.get_absolute_url }}">

                                    <img class="CardPicture-img" src="{{ product.preview.url }}" alt="{{ product.preview.name }}" /></a>
                                    <div class="Card-content">
                                        <strong class="Card-title">
                                            <a href="{{ product.get_absolute_url }}">{{ product.name }}</a>
                                        </strong>
                                        <div class="Card-description">
                                            <div class="Card-cost"><span class="Card-price">${{ offer.price }}</span>
                                            </div>

                                            <div class="Card-category">{{ product.category.name }}
                                            </div>

                                            <div class="Card-hover">
                                                <a class="Card-btn" href="{% url 'basket:add_product' product_pk=product.pk offer_pk=offer.pk %}">
                                                    <img src="{% static 'assets/img/icons/card/cart.svg' %}" alt="cart.svg" />
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            {% endfor %}
                        {% endfor %}
                    </div>
                    <div class="Pagination">

                        <div class="Pagination-ins">
                            {% if page_obj.has_previous %}
                                <a class="Pagination-element Pagination-element_prev" href="?page={{ page_obj.previous_page_number }}">
                                    <img src="{% static 'assets/img/icons/prevPagination.svg' %}" alt="prevPagination.svg" />
                                </a>
                            {% endif %}

                            {% for p in paginator.page_range %}
                                {% if page_obj.number == p %}
                                    <a class="Pagination-element Pagination-element_current" href="">
                                        <span class="Pagination-text">{{ p }}</span>
                                    </a>

                                {% endif %}
                            {% endfor %}

                            {% if page_obj.has_next %}
                                <a class="Pagination-element Pagination-element_prev" href="?page={{ page_obj.next_page_number  }}">
                                    <img src="{% static 'assets/img/icons/nextPagination.svg' %}" alt="nextPagination.svg" />
                                </a>
                            {% endif %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
