                    <div class="BannersHomeBlock-row">
                        <div class="BannersHomeBlock-block">
                            <strong class="BannersHomeBlock-title">{{ banner.title }}
                            </strong>
                            <div class="BannersHomeBlock-content">{% translate 'Ğ¾Ñ‚' %}&#32;<span class="BannersHomeBlock-price">${{ banner.price }}</span>
                            </div>
                        </div>
                        <div class="BannersHomeBlock-block">
                            <div class="BannersHomeBlock-img"><img src="{{ banner.image.url }}" />
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
