{% load static %}
{% load sliders_return_data %}

{% load i18n %}


{% query_set as sliders %}

<div class="Header-slider">
    <div class="Slider Slider_main">
      <div class="Slider-box">
        {% for slider in sliders %}
            <div class="Slider-item">
              <div class="Slider-content">
                <div class="row">
                  <div class="row-block">
                    <strong class="Slider-title">{{ slider.title }}</strong>
                    <div class="Slider-text">{{ slider.description }}</div>
                    <div class="Slider-footer">
                        <a class="btn btn_primary" href="{{ slider.product.get_absolute_url }}">{% translate 'К покупкам!' %}</a>
                    </div>
                  </div>
                  <div class="row-block">
                    <div class="Slider-img"><img src="{{ slider.image.url }}" alt="{{ slider.image.name }}"/>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        {% endfor %}

      </div>
      <div class="Slider-navigateWrap">
        <div class="Slider-navigate">
        </div>
      </div>
    </div>
</div>
